@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h1>Bem-vindo ao Feed</h1>

    @await Component.InvokeAsync("CreatePost")

    @if (Model.Posts.Any())
    {
            <div class="mt-4">
                <h4>Seus Posts</h4>
                <ul class="list-group">
                @foreach (var post in Model.Posts)
                {
                            <li class="list-group-item">
                                <h5>@post.User.Name</h5>
                                <p>@post.Content</p>
                                <small>Criado em: @post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </li>
                }
                </ul>
            </div>
    }
    else
    {
            <p class="mt-4">Você ainda não tem posts. Crie o primeiro agora!</p>
    }
    <a href="/Logout" class="btn btn-danger mt-3">Sair</a>
</div>
